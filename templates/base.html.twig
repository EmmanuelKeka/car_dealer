<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>My Project - {% block title %}{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    <!-- BOOTSTRAP 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- BOOTSTRAP 5 JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="{{ asset('/assets/css/index.css')}}">
    <link rel="stylesheet" href="{{ asset('/assets/css/Login.css')}}">
    <link rel="stylesheet" href="{{ asset('/assets/css/ShowCar.css')}}">
    <link rel="stylesheet" href="{{ asset('/assets/css/Cars.css')}}">
    <link rel="stylesheet" href="{{ asset('/assets/css/Cart.css')}}">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="{{ url('home') }}" style="color: #ff0022;font-weight: bold">FunCarDealer</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link" href="{{ url('home') }}">home</a>
            <a class="nav-item nav-link" href="#">Cars</a>
            <a class="nav-item nav-link" href="{{ url('app_contact') }}">Contact</a>
            <a class="nav-item nav-link" href="{{ url('app_about') }}">About Us</a>
            {% if app.user %}
                <a class="nav-item nav-link" href="{{ url('app_profile') }}">profil</a>
            {% endif %}

            {% if app.user == false %}
                <a class="nav-item nav-link" href="{{ url('app_login') }}">login</a>
            {% endif %}
        </div>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>

</body>
</html>
